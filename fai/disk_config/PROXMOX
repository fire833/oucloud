
# Disk config for proxmox instances

# p=<partlabel> <mountpoint> <size>   <fs type> <mount options> <misc options>

# entire disk with LVM, separate /home

disk_config boot_disk disklabel:gpt fstabkey:uuid align-at:1M

p=efi     /boot/efi 512M  vfat  rw
p=boot    /boot     200   ext4  rw,noatime
p=system  -         4G-   -     -

disk_config lvm

vg root_lv  boot_disk.3
root_lv_root     /       3G-50G   ext4    noatime,rw
# root_lv_swap     swap    200-4G   swap    sw
